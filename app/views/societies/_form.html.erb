<%= form_for(@society) do |f| %>
  <% if @society.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@society.errors.count, "error") %> prohibited this society from being saved:</h2>

      <ul>
      <% @society.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :denominazione %><br />
    <%= f.text_field :denominazione %>
  </div>
  <div class="field">
    <%= f.label :forma_giuridica %><br />
    <%= f.text_field :forma_giuridica %>
  </div>
  <div class="field">
    <%= f.label :sede %><br />
    <%= f.text_field :sede %>
  </div>
  <div class="field">
    <%= f.label :altre_sedi %><br />
    <%= f.text_area :altre_sedi %>
  </div>
  <div class="field">
    <%= f.label :cf_pi %><br />
    <%= f.text_field :cf_pi %>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br />
    <%= f.text_area :descrizione %>
  </div>
  <div class="field">
    <%= f.label :stato %><br />
    <%= f.select (:stato, [['In attivà', ' In attivà'], ['Cessata', 'Cessata'] ], :include_blank=>true ) %>
    
  </div>
  <div class="field">
    <%= f.label :agenzia_mandataria %><br />
    <%= f.text_field :agenzia_mandataria %>
  </div>
  <div class="field">
    <%= f.label :data_inizio %><br />
