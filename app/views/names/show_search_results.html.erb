<table>
  <tr>
    <th>cognome_nome </th>
    <th>luogo_nascita</th> 
    <th>data_nascita</th> 
    <th>residenza</th> 
    <th>cittadinanza</th>
    <th>association_id</th>
    <th>ambit_id</th>
    <th>area_id</th>
    <th> Foto </th>
    <th>Edit</th>
  
  </tr>

<%= @names.each do |name| %>
  <tr>
    <td><%= link_to name.cognome_nome, name %></td>
    <td><%= name.luogo_nascita %></td>
    <td><%= name.data_nascita %></td>
    <td><%= name.residenza %></td>
    <td><%= name.cittadinanza %></td>
    
    
	<td>
	<% if name.association.nil? %>
  	<% else %>
		<%=name.association.associazione_criminale %>
    </td>
	<%end%>
	
    <td>
	<% if name.ambit.nil? %>
  	<% else %>
		<%=name.ambit.ambito_criminale %>
    </td>
	<%end%>
    
    <td>
	<% if name.area.nil? %>
  	<% else %>
		<%=name.area.area_criminale %>
    </td>
	<%end%>
    <td><%= image_tag name.photo.url(:thumb) %></td>
        <td><%= link_to 'Show', name %>
    <%= link_to 'Edit', edit_name_path(name) %>
    <%= link_to 'Destroy', name, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
    
    